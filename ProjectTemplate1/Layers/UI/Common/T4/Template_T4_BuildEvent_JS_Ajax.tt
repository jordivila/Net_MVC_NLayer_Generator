<# UrlHelper Url = this.UrlHelperGet(); #>


jQuery(document).ready(function () {
    jQuery.ajaxSetup({
        type: "GET",
        contentType: "application/json; charset=utf-8",
        dataType: "json"
    });
});

$customNamespace$.Ajax = {};

$customNamespace$.Ajax.ThemeSet = function (theme, onOK, onKO) {
    var jqxhr = jQuery.ajax({
        url: "<#= UrlHelperExtension.ThemeSet(Url) #>",
        type: "POST",
        data: JSON.stringify({ theme: theme })
    })
    .done(function (data, textStatus, jqXHR) {
        onOK(data);
    })
    .fail(function (jqXHR, textStatus, errorThrown) {
        onKO(jqXHR);
    });
};
$customNamespace$.Ajax.CultureSet = function (culture, onOK, onKO) {
    var jqxhr = jQuery.ajax({
        url: "<#= UrlHelperExtension.CultureSet(Url) #>",
        type: "POST",
        data: JSON.stringify({ culture: culture })
    })
    .done(function (data, textStatus, jqXHR) {
        onOK(data);
    })
    .fail(function (jqXHR, textStatus, errorThrown) {
        onKO(jqXHR);
    });
};
$customNamespace$.Ajax.UserBar = function (onOK, onKO, onComplete) {
    var jqxhr = jQuery.ajax({
			url: "<#= UserAccountUrlHelper.Account_UserAccountBar(Url) #>"
            , type: "GET"
            , data: {}
            , dataType: "html"
            , cache: false
    })
    .done(function (data, textStatus, jqXHR) {
        onOK(data);
    })
    .fail(function (jqXHR, textStatus, errorThrown) {
        onKO(jqXHR);
    })
	.always(function (jqXHR, textStatus, errorThrown) {
		onComplete();
	});
};

