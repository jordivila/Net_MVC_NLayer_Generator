@using $customNamespace$.UI.Web.Common.Mvc.Html;
@model $customNamespace$.UI.Web.Areas.LogViewer.Models.LogViewerModel

@{
    Layout = "~/Areas/LogViewer/Views/Shared/LayOut.cshtml";
}

@section InlineStyles
{
<style type="text/css">
    .ui-error-page .ui-logViewer * {text-align:left;}
    .ui-error-page .ui-logViewer ul li {clear:both;margin:1em 0 0 0;padding:.5em 0 0 0;}
</style>
}

@section ScriptsToAdd
{

}

@section ErrorDescriptionContainer
{
<div class="ui-logViewer">
    <h3> @$customNamespace$.Resources.General.GeneralTexts.TraceDataSource : @this.Model.LogTraceSourceSelected</h3>
    <br />
    <p>@$customNamespace$.Resources.General.GeneralTexts.SelectListenerToGetDetails</p>
    <ul>
    @{
        foreach (var item in this.Model.LogTraceListeners)
        {
            <text>
                <li>
                    <a href="@$customNamespace$.UI.Web.Areas.LogViewer.LogViewerUrlHelper.LogViewerByListenerName(Url, this.Model.LogTraceSourceSelected, item.Name)">@item.Name</a>
                </li>
            </text>
        }
    }
    </ul>
</div>
}

